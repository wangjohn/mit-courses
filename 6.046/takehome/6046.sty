% Command to make the header box.
\newcommand{\header}{
  \begin{center}
    \hspace*{-0.25in}\framebox[7in]{
      \vbox{
        \hbox to 6.25in { \@author \hfill \@date}
        \vspace{1mm}
        \hbox to 6.25in {\bf \hfill 6.046 Problem Set \@problemset\ \hfill}
        \vspace{1mm}
        \hbox to 6.25in { Collaborators: {\it \@collab} \hfill}
      }
    }
  \end{center}
}

\AtBeginDocument{
  \ifx \@author \@empty
    \@latexerr{You must use \noexpand\author{name} for 6.046 homework}
  \fi
  \ifx \@problemset \@empty
    \@latexerr{You must use \noexpand\problemset{number} for 6.046 homework}
  \fi
  \ifx \@collab \@empty
    \@latexerr{You must use \noexpand\collab{names or none} for 6.046 homework}
  \fi
  \thispagestyle{plain}
  \header
  \lhead{\@author}
  \rhead{\textbf{6.046 Problem Set \@problemset}}
  \cfoot{\thepage}
  \pagestyle{fancy}
}


